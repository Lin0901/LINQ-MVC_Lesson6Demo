<h1>Create New Equipment</h1>

<form asp-controller="game" asp-action="CreateEquipment" method="post">

    <div>
        <input type="text" name="name" placeholder="Equipment Name"/> 
    </div>

    <div>
        <select name="type" asp-items="Html.GetEnumSelectList<EquipmentType>()"></select>
    </div>

    <div>
        <input type="number" name="strengthRequirement" placeholder="Set StrengthRequirement"/>
    </div>
    <div>
        <input type="number" name="strengthModifier" placeholder="Set StrengthModifier"/>
    </div>
    <div>
        <input type="number" name="intelligenceReqiuirement" placeholder="Set IntelligenceReqiuirement"/>
    </div>
    <div>
        <input type="number" name="intelligenceModifier" placeholder="Set IntelligenceModifier"/>
    </div>



    <button type="submit" name="submit">submit</button>
</form>


